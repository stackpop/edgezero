spin_manifest_version = 2

[application]
name = "{{proj_spin}}"
version = "0.1.0"

[[trigger.http]]
route = "/..."
component = "{{proj_spin}}"

[component.{{proj_spin}}]
source = "target/wasm32-wasip1/release/{{proj_spin_underscored}}.wasm"
allowed_outbound_hosts = ["https://*:*"]
[component.{{proj_spin}}.build]
command = "cargo build --target wasm32-wasip1 --release"
watch = ["src/**/*.rs", "Cargo.toml"]
